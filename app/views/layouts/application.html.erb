<!DOCTYPE html>
<html>
<head>
  <title>Chatr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="header">
  <div id="chatr">
    <%= link_to "Chatr", root_path %>
  </div>

  <div id="title">
    <%= @page_title %>
  </div>

  <% if signed_in? %>
    <div id="user-links">
      Hi, <%= current_user.email %>
      <%= link_to "Sign out", session_path, method: :delete %>
    </div>
  <% end %>
</div>

<div id="container">
  <%= yield %>
</div>

</body>
</html>
